{
  "manifest_version": 3,
  "default_locale": "en",
  "name": "__MSG_ext_name__",
  "description": "__MSG_ext_desc__",
  "version": "1.2.1",
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "dashboard.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "host_permissions": [
    "https://www.instagram.com/",
    "https://*.instagram.com/*",
    "https://*.cdninstagram.com/*",
    "https://*.fbcdn.net/*"
  ],
  "content_scripts": [
    {
      "js": ["src/content/content.ts"],
      "matches": ["https://www.instagram.com/*", "https://*.instagram.com/*/"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "permissions": [
    "declarativeNetRequest",
    "alarms",
    "storage",
    "unlimitedStorage",
    "activeTab"
  ]
}
