{
  "manifest_version": 3,
  "name": "InstaSnap - Instagram Profile Tracker",
  "description": "Track Instagram followers, detect unfollowers, and analyze growth trends with secure, local-only snapshots.",
  "version": "1.0",
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "dashboard.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "host_permissions": [
    "https://www.instagram.com/",
    "https://*.instagram.com/*",
    "https://*.cdninstagram.com/*",
    "https://*.fbcdn.net/*"
  ],
  "content_scripts": [
    {
      "js": ["src/content/content.ts"],
      "matches": ["https://www.instagram.com/*", "https://*.instagram.com/*/"]
    }
  ],
  "permissions": [
    "declarativeNetRequest",
    "alarms",
    "storage",
    "unlimitedStorage",
    "activeTab"
  ]
}
